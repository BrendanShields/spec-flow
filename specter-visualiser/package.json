{
  "name": "specter-visualiser",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI tool to visualize and track Specter workflow status and metrics",
  "main": "dist/index.js",
  "bin": {
    "specter-viz": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "specter",
    "cli",
    "visualization",
    "workflow",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "date-fns": "^3.0.6",
    "ink": "^4.4.1",
    "ink-table": "^3.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "ink-select-input": "^5.0.0",
    "react": "^18.2.0",
    "yaml": "^2.3.4",
    "boxen": "^5.1.2",
    "cli-table3": "^0.6.3",
    "marked": "^11.1.1",
    "marked-terminal": "^6.2.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/marked": "^6.0.0",
    "@types/marked-terminal": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
